extends ../shared/layout
block main-content
    .well.col-md-6.col-md-offset-3
        form.form-horizontal(method='POST')
            fieldset
                legend.text-center Login
                .form-group
                    label.col-md-4.control-label(for="username") Username
                    .col-md-8
                        input.form-control(id="username", type="text", placeholder="Username",pattern=".{5,}", name="username", required)
                .form-group
                    label.col-md-4.control-label(for="password") Password
                    .col-md-8
                        input.form-control(id="password", type="password", placeholder="Password",pattern=".{5,}", name="password", required)
                .pull-right
                    input.btn.btn-primary(type="submit", value="Login")
                    a.btn.btn-primary(href="/") Cancel
