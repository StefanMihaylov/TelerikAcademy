.container
    .row
        .col-md-2 Search
        .col-md-4
            input.form-control(type="text", placeholder="Search", ng-model="search")
        .col-md-2 Sort
        .col-md-4
            select.form-control(ng-model="sort")
                option(value=" " ng-selected="'true'") Default
                option(value="driver") Driver
                option(value="from") From
                option(value="to") To
    br
    table.table
        tr
            th Driver
            th From
            th To
            th Date
        tr(ng-repeat="trip in trips | filter: search | orderBy: sort")
            td
                a(href="#/trips/{{ trip._id }}") {{ trip.driver }}
            td {{ trip.from }}
            td {{ trip.to }}
            td {{ trip.date | date }}